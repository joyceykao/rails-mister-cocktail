<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

<ul class="list-group">
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item">
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to dose_path(dose),
                      method: :delete,
                      data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash"></i>
          <% end %>
      </li>
    <% end %>
  </ul>


<p><%= link_to 'Edit', edit_cocktail_path(@cocktail) %></p>

<p><%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail) %></p>

<p><%= link_to 'Back', cocktails_path %></p>
