<div class="container">
  <%= simple_form_for [@cocktail, @dose] do |f| %>

    <div class="form-inputs">
      <%= f.input :description %>
    </div>

    <div class="form-inputs">
      <%= f.association :ingredient %>
    </div>

    <div class="form-actions">
      <%= f.button :submit , class: "btn btn-primary"%>
    </div>
  <% end %>

  <%= link_to "Back to #{@cocktail.name}", cocktails_path %>
</div>
